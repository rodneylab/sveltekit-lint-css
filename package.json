{
  "name": "sveltekit-lint-css",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "description": "SvelteKit CSS Stylelint: how you can lint vanilla CSS within your Svelte source files using stylelint accessibility and best practice rules.",
  "scripts": {
    "dev": "svelte-kit dev --port 3030",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview --port 3000",
    "check": "svelte-check",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:css": "stylelint \"src/**/*.{css,svelte}\"",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "prettier:check": "prettier --check --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.4",
    "@fontsource/hind": "^4.5.6",
    "@fontsource/montserrat": "^4.5.7",
    "@sveltejs/kit": "next",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "husky": "^7.0.4",
    "postcss-html": "^1.4.1",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "stylelint": "^14.8.0",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-standard": "^25.0.0",
    "svelte": "^3.47.0",
    "svelte-check": "^2.7.0"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/sveltekit-lint-css"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/sveltekit-lint-css/issues"
  }
}
