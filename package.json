{
	"name": "sveltekit-lint-css",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "SvelteKit CSS Stylelint: how you can lint vanilla CSS within your Svelte source files using stylelint accessibility and best practice rules.",
	"scripts": {
		"dev": "vite dev",
		"start": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check",
		"lint": "prettier --ignore-path .gitignore --check --plugin=prettier-plugin-svelte . && eslint --ignore-path .gitignore .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"format": "prettier --ignore-path .gitignore --write --plugin=prettier-plugin-svelte .",
		"prettier:check": "prettier --check ---plugin=prettier-plugin-svelte ."
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.6.7",
		"@fontsource/hind": "^5.0.5",
		"@fontsource/montserrat": "^5.0.5",
		"@sveltejs/kit": "^1.22.3",
		"commitlint": "^17.6.7",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte": "^2.32.4",
		"husky": "^8.0.3",
		"postcss-html": "^1.5.0",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"stylelint": "^15.10.2",
		"stylelint-config-recommended": "^13.0.0",
		"stylelint-config-standard": "^34.0.0",
		"svelte": "^4.1.1",
		"svelte-check": "^3.4.6",
		"vite": "^4.4.7"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/sveltekit-lint-css"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/sveltekit-lint-css/issues"
	},
	"peerDependencies": {
		"vite": "^3.0.5"
	}
}
