{
	"name": "sveltekit-lint-css",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "SvelteKit CSS Stylelint: how you can lint vanilla CSS within your Svelte source files using stylelint accessibility and best practice rules.",
	"scripts": {
		"dev": "vite dev",
		"start": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check",
		"lint": "prettier --ignore-path .gitignore --check --plugin prettier-plugin-svelte . && eslint --ignore-path .gitignore .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"format": "prettier --ignore-path .gitignore --write --plugin prettier-plugin-svelte .",
		"prettier:check": "prettier --check --plugin=prettier-plugin-svelte ."
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^18.6.2",
		"@fontsource/hind": "^5.0.8",
		"@fontsource/montserrat": "^5.0.16",
		"@sveltejs/kit": "^2.5.1",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"commitlint": "^18.6.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"husky": "^9.0.11",
		"postcss-html": "^1.6.0",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.1",
		"stylelint": "^16.2.1",
		"stylelint-config-recommended": "^14.0.0",
		"stylelint-config-standard": "^36.0.0",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.4",
		"vite": "^5.1.4"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/sveltekit-lint-css"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/sveltekit-lint-css/issues"
	},
	"peerDependencies": {
		"vite": "^3.0.5"
	}
}
